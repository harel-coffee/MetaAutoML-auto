
<MudCard>
    <MudCardHeader Class="mud-theme-primary">
        <CardHeaderContent >
            <MudText Typo="Typo.h6">Explain</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            @if (Model != null)
            {
                <MudButton Href="@("/models/" + Model.Model.ID + "/analysis")"
                    Variant="Variant.Filled" 
                    EndIcon="@Icons.Material.Filled.MoreHoriz" 
                    Color="Color.Secondary"
                    Size="Size.Small" 
                    Style="margin-top: 8px">More</MudButton>
            }
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        @if (true)
        {
            <DataLoaderSpinner />
        }
        else
        {
        }
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public GetModelResponseDto Model
    { 
        get
        {
            return _model;
        } 
        set
        {
            _model = value;
            StateHasChanged();
        } 
    }
    private GetModelResponseDto _model;
}
